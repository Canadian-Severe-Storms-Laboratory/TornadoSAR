<UserControl x:Class="TornadoSAR.FileSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TornadoSAR"
             mc:Ignorable="d">
    <Grid>
        <TextBox x:Name="fileBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsReadOnly="True" Margin="0,0,70,0"/>
        <Button x:Name="browseButton" Content="Browse..." Click="SelectFile" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Bottom" Width="60" Height="25"/>
    </Grid>
</UserControl>
